<html>
    <head>
        <title>Restaraunt Search</title>
    </head>
    <body>
        <h1>Welcome to your Restaraunt Search</h1>

        <p>List your favorite cuisines:</p>

        <form action ="/cuisines" method = "post">
            <label for = "CuisineName">Cuisine name:</label>
            <input id = "CuisineName" name="CuisineName" type="text">

            <button type ="submit">Add cuisine</button>
        </form>

        {% if cuisines is not empty %}
        <p>Here are all your cuisines</p>
        <ul>
            {% for cuisine in cuisines %}
                <li><a href = "/cuisines/{{ cuisine.getId }}">{{ cuisine.getCuisineName }}</a></li>
            {% endfor %}
        </ul>

        {% else %}
            <p>There are no cuisines yet!</p>
        {% endif %}

    </body>
</html>
